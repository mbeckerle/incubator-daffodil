<tdml:testSuite
  xmlns:tdml="http://www.ibm.com/xmlns/dfdl/testData" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:dfdl="http://www.ogf.org/dfdl/dfdl-1.0/" xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:dfdlx="http://www.ogf.org/dfdl/dfdl-1.0/extensions"
  xmlns:ex="http://example.com" xmlns:tns="http://example.com"
  defaultRoundTrip="onePass">
  <tdml:tutorial>
  This test suite exercises large strings (10,000 characters) and dealing with 
  looking for '/' delimiters, yet skipping past URLs containing things like
  'http://' which would otherwise trip up the delimiter scanning. 
  </tdml:tutorial>
  <tdml:defineSchema name="s1" elementFormDefault="unqualified">

  <xs:include schemaLocation="org/apache/daffodil/xsd/DFDLGeneralFormat.dfdl.xsd" />
      
      <dfdl:format ref="ex:GeneralFormat"
         emptyValueDelimiterPolicy="none"
         occursCountKind="implicit"
         separatorSuppressionPolicy="trailingEmpty"/>
      
  <dfdl:defineFormat name="setListFormat">
        <dfdl:format separator="//%NL; %WSP*;//%NL;" separatorPosition="postfix"
          separatorSuppressionPolicy="trailingEmpty" />
      </dfdl:defineFormat>
            
  <dfdl:defineFormat name="linearFieldListFormat">
        <dfdl:format separator="%WSP*;/ /" separatorPosition="prefix"
          separatorSuppressionPolicy="trailingEmpty" sequenceKind="ordered" />
      </dfdl:defineFormat>

  <xs:element name="e">
    <xs:complexType>
      <xs:sequence dfdl:ref="ex:setListFormat">
        <xs:element name="set" minOccurs="0" maxOccurs="unbounded">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="initiator" type="xs:string" dfdl:lengthKind="pattern"
                dfdl:lengthPattern="(.*?)(?=\/)" />
              <xs:sequence dfdl:ref="ex:linearFieldListFormat">
                <xs:element name="field" type="xs:string" maxOccurs="unbounded" 
                  dfdl:lengthKind="pattern" dfdl:lengthPattern="(?>\:\/\/|\/{2,}(?!\n)|[^\/])*"/>
              </xs:sequence>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="fields">
    <xs:complexType>
      <xs:sequence>
        <xs:sequence dfdl:ref="ex:linearFieldListFormat">
          <xs:element name="field" type="xs:string" maxOccurs="unbounded"
            dfdl:lengthKind="pattern" dfdl:lengthPattern="(?>\:\/\/|\/{2,}(?!\n)|[^\/])*" />
        </xs:sequence>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

</tdml:defineSchema>

  <tdml:parserTestCase name="bigString1" root="e" model="s1"
    roundTrip="onePass">

    <tdml:document>
      <tdml:documentPart type="file">bigString.txt</tdml:documentPart>
    </tdml:document>

    <tdml:infoset>
      <tdml:dfdlInfoset type="file">bigString.xml</tdml:dfdlInfoset>
    </tdml:infoset>
  </tdml:parserTestCase>

  <tdml:parserTestCase name="emptyElements1" root="e" model="s1" roundTrip="onePass">

    <tdml:document><![CDATA[GENTEXT/REMARKS/data//data//
]]></tdml:document>

    <tdml:infoset>
      <tdml:dfdlInfoset>
        <ex:e>
          <set>
            <initiator>GENTEXT</initiator>
            <field><![CDATA[REMARKS]]></field>
            <field>data//data</field>
          </set>
        </ex:e>
      </tdml:dfdlInfoset>
    </tdml:infoset>
  </tdml:parserTestCase>
  
  <tdml:parserTestCase name="emptyElements2" root="fields" model="s1" roundTrip="onePass">

    <tdml:document><![CDATA[/a/////b/c]]></tdml:document>

    <tdml:infoset>
      <tdml:dfdlInfoset>
        <ex:fields>
            <field>a/////b</field>
            <field>c</field>
        </ex:fields>
      </tdml:dfdlInfoset>
    </tdml:infoset>
  </tdml:parserTestCase>
  
  <tdml:parserTestCase name="emptyElements3" root="fields" model="s1" roundTrip="onePass">

    <tdml:document><![CDATA[/a/////b]]></tdml:document>

    <tdml:infoset>
      <tdml:dfdlInfoset>
        <ex:fields>
            <field>a/////b</field>
        </ex:fields>
      </tdml:dfdlInfoset>
    </tdml:infoset>
  </tdml:parserTestCase>
  
  
</tdml:testSuite>
